<%- include('partials/header') %>
<section class="hero">
  <h1><%= site.hero.headline %></h1>
  <p><%= site.hero.subheadline %></p>
  <a href="<%= site.hero.cta.href %>"><button><%= site.hero.cta.label %></button></a>
</section>
<section class="grid">
  <% site.services.forEach(function(cat){ %>
    <div class="card">
      <h3><%= cat.category %></h3>
      <ul>
        <% cat.items.forEach(function(i){ %><li><%= i %></li><% }); %>
      </ul>
    </div>
  <% }); %>
</section>
<section class="card" id="testimonials"><h2>Testimonials</h2><div id="ts"></div></section>
<%- include('partials/footer') %>

<script>
const t = <%- JSON.stringify(site.testimonials) %>;
const box = document.getElementById('ts');
let i=0;
function show(){ 
  const item = t[i%t.length];
  box.innerHTML = `<blockquote>"${item.text}"</blockquote><div>â€” ${item.name}</div>`;
  i++;
}
show(); setInterval(show, 4000);
</script>
